{
  "name": "dmx-controller-agent",
  "version": "1.0.0",
  "description": "DMX Controller Agent for Par Light B262 with Web Interface and REST API",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:hardware": "node scripts/test.js",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "prepare": "husky install"
  },
  "keywords": [
    "dmx",
    "lighting",
    "animation",
    "par-light",
    "rgb",
    "web-interface",
    "rest-api"
  ],
  "author": "ottes",
  "license": "ISC",
  "dependencies": {
    "dmx": "^0.25.1",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "jest": "^30.0.5",
    "lint-staged": "^15.5.2",
    "nodemon": "^3.1.10",
    "standard": "^17.1.0",
    "supertest": "^7.1.4"
  },
  "standard": {
    "env": [
      "node",
      "browser"
    ],
    "globals": [
      "fetch"
    ],
    "ignore": [
      "node_modules",
      "docs",
      "public/script.js",
      "tests/**/*.js",
      "coverage/**",
      "jest.config.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix"
    ]
  }
}
